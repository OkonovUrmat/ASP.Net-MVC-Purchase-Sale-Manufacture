@model Module_2_Zakupka_Prodaja_Proizvodstvo.Models.ProdajProduct

@{
    ViewBag.Title = "Добавление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Продажа Продукта</legend>

        <p>
            Продукт<br />
            @Html.DropDownListFor(model => model.product, ViewBag.Gotov_products as SelectList)
        </p>

        <p>
           Количество<br />
            @Html.EditorFor(model => model.kol_vo)
        </p>

        <p>
            Сумма  <br />
            @Html.EditorFor(model => model.summa)
        </p>
        <p>
        <p>
           Дата  <br />
            @Html.EditorFor(model => model.data)
        </p>
        <p>
            Сотрудник <br />
            @Html.DropDownListFor(model => model.sotrudnik, ViewBag.Sotrudniks as SelectList)
        </p>

        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("К списку", "Index")
</div>